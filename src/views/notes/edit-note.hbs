<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Editar tícket</h3>
        </div>
        <div class="card-body">
            <form action="/notes/edit-note/{{note.id}}?_method=PUT" method="POST">
            <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" name="title" class="form-control" placeholder="Título" value="{{note.title}}">
                </div>
                <br>
                <div class="form-group">
                    <textarea name="description" class="form-control">
                        {{note.description}}
                    </textarea>
                </div>
                <br>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>